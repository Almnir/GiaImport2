<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<target name="logfile" type="File"
			layout="${longdate} ${uppercase:${level}} ${message}"
			fileName="${specialfolder:folder=LocalApplicationData}/ФГБУ_'ФЦТ'/GiaImport2/log_${shortdate}.txt"
				archiveAboveSize="8388608"
				archiveFileName="${specialfolder:folder=LocalApplicationData}/ФГБУ_'ФЦТ'/GiaImport2/log.archive.{#}.log"
				archiveEvery="Day" archiveNumbering="Rolling" maxArchiveFiles="15" concurrentWrites="true"/>
	</targets>
	<rules>
		<logger name="*" minlevel="Info" writeTo="logfile" />
	</rules>
</nlog>